@model IEnumerable<CorretoraDeImoveis.Models.Property>

@{
    ViewData["Title"] = "Lista de Imóveis";
}

<h2>@ViewData["Title"]</h2>

<hr />

<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group">
        <label class="mr-2">Filtrar por Categoria:</label>
        <select name="categoryId" class="form-control mr-2" asp-items="ViewBag.Categories">
            <option value="">-- Todas as Categorias --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-info mr-2">Pesquisar</button>
    <a asp-action="Index" class="btn btn-secondary">Limpar Busca</a>
</form>

<hr />

<div class="d-flex justify-content-between align-items-center">
    <p class="mb-0">
        <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Imóvel</a>
    </p>

    <div>
        <span class="mr-2">Exportar como:</span>
        <a asp-action="ExportAsCsv" class="btn btn-outline-secondary btn-sm">CSV (Excel)</a>
        <a asp-action="ExportAsJson" class="btn btn-outline-secondary btn-sm">JSON</a>
        <a asp-action="ExportAsSimpleReport" class="btn btn-outline-secondary btn-sm">Relatório TXT</a>
    </div>
</div>

<table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Bedrooms)</th>
            <th>@Html.DisplayNameFor(model => model.ParkingSpaces)</th>
            <th>@Html.DisplayNameFor(model => model.Bathrooms)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Bedrooms)</td>
                <td>@Html.DisplayFor(modelItem => item.ParkingSpaces)</td>
                <td>@Html.DisplayFor(modelItem => item.Bathrooms)</td>
            </tr>
        }
    </tbody>
</table>