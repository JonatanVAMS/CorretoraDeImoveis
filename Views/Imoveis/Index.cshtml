@model IEnumerable<CorretoraDeImoveis.Models.Imovel>

@{
    ViewData["Title"] = "Lista de Imóveis";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Imóvel</a>
    <a asp-action="ExportarTxt" class="btn btn-secondary">Exportar para .TXT</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Endereco)</th>
            <th>Categoria</th>
            <th>@Html.DisplayNameFor(model => model.NroQuartos)</th>
            <th>@Html.DisplayNameFor(model => model.NroVagasGaragem)</th>
            <th>@Html.DisplayNameFor(model => model.NroBanheiros)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                <td>@Html.DisplayFor(modelItem => item.Categoria.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.NroQuartos)</td>
                <td>@Html.DisplayFor(modelItem => item.NroVagasGaragem)</td>
                <td>@Html.DisplayFor(modelItem => item.NroBanheiros)</td>
            </tr>
        }
    </tbody>
</table>